{
  "compilerOptions": {
    "outDir": "./dist/",
    "rootDir": "./",
    //
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationDir": "types",
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "sourceMap": true,
    "strict": true,
    "target": "es5",
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}